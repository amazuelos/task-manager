    "pinia": "^2.2.4",
    "pinia-plugin-persistedstate": "^4.1.1",
    "tailwind": "^4.0.0",
    "vue": "^3.5.12",
    "vue-router": "^4.4.5"
  },
  "devDependencies": {
    "@tsconfig/node20": "^20.1.4",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^20.16.11",
    "@vitejs/plugin-vue": "^5.1.4",
    "@vitejs/plugin-vue-jsx": "^4.0.1",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.5.1",
    "autoprefixer": "^10.4.20",
    "cypress": "^13.15.0",
    "jsdom": "^25.0.1",
    "npm-run-all2": "^6.2.3",
    "postcss": "^8.4.47",
